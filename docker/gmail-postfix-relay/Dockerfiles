FROM alpine:edge

RUN apk add --no-cache bash postfix postfix-pcre rsyslog ca-certificates gettext

COPY config/postfix-main.cf
COPY config/postfix-sasl_passwd
COPY config/init-postfix.sh
COPY config/startup-postfix.sh

EXPOSE 25

WORKDIR /root

RUN /root/config/init-postfix.sh

ENTRYPOINT ["/root/config/entrypoint-postfix.sh']
CMD ["startup"] 
